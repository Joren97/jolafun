---
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Springkasteel from "../components/Springkasteel.astro";
---

<Layout title="Verhuur van springkastelen">
  <Hero />
  <div class="divider"></div>
  <div class="container mx-auto px-8">
    <h3 class="text-3xl mb-4 lg:mb-8 text-neutral font-bold">
      Onze springkastelen
    </h3>
    <Springkasteel
      imagePath="/src/images/springkastelen/worm-1.webp"
      name="Walter de worm"
      altText="Walter de worm"
      width="3,5"
      length="4,5"
      price="90"
      extra="Optie: babyborrel (zie foto's)"
      images={["/src/images/springkastelen/worm-3.webp"]}
    />
    <div class="divider"></div>
    <Springkasteel
      imagePath="/src/images/springkastelen/voetbal-1.webp"
      name="Voetbal"
      altText="Voetbal"
      width="4"
      length="4"
      price="100"
      images={[
        "/src/images/springkastelen/voetbal-2.webp",
        "/src/images/springkastelen/voetbal-3.webp",
      ]}
    />
    <div class="divider"></div>
    <Springkasteel
      imagePath="/src/images/springkastelen/fred-1.webp"
      name="Fred de eend"
      altText="Fred de eend"
      width="5"
      length="5,5"
      price="110"
      images={[
        "/src/images/springkastelen/fred-2.webp",
        "/src/images/springkastelen/fred-3.webp",
        "/src/images/springkastelen/fred-4.webp",
        "/src/images/springkastelen/fred-5.webp",
      ]}
    />
    <div class="divider"></div>
    <Springkasteel
      imagePath="/src/images/springkastelen/kamiel-1.webp"
      name="Kamiel de leeuw"
      altText="Kamiel de leeuw"
      width="5"
      length="5,5"
      price="115"
      images={[
        "/src/images/springkastelen/kamiel-2.webp",
        "/src/images/springkastelen/kamiel-3.webp",
        "/src/images/springkastelen/kamiel-4.webp",
        "/src/images/springkastelen/kamiel-5.webp",
        "/src/images/springkastelen/kamiel-6.webp",
      ]}
    />
    <div class="divider"></div>
    <Springkasteel
      imagePath="/src/images/springkastelen/maurice-1.webp"
      name="Maurice het nijlpaard"
      altText="Maurice het nijlpaard"
      width="6"
      length="7"
      price="120"
      images={[
        "/src/images/springkastelen/maurice-2.webp",
        "/src/images/springkastelen/maurice-3.webp",
      ]}
    />
    <div class="divider"></div>
    <Springkasteel
      imagePath="/src/images/springkastelen/clown-1.webp"
      name="Tito de clown"
      altText="Tito de clown"
      width="5"
      length="5,5"
      price="125"
      images={[
        "/src/images/springkastelen/clown-2.webp",
        "/src/images/springkastelen/clown-3.webp",
        "/src/images/springkastelen/clown-4.webp",
        "/src/images/springkastelen/clown-5.webp",
        "/src/images/springkastelen/clown-6.webp",
      ]}
    />
    <p class="mt-8 text-neutral lg:text-xl">
      Gratis levering in Geel of binnen een straal van 15 kilometer.
    </p>
  </div>
  <div class="divider"></div>
  <Footer />
</Layout>
