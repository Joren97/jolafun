---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  imagePath: string;
  altText: string;
  name: string;
  width: string;
  length: string;
  price: string;
}

const { imagePath, altText, name, width, length, price } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/springkastelen/*.{jpeg,jpg,png,gif,webp}"
);

console.log(images);

if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/images/*.{jpeg,jpg,png,gif,webp}"`
  );
---

<div>
  <Image src={images[imagePath]()} alt={altText} class="rounded-lg mb-4" />
  <p class="text-xl font-bold">{name}</p>
  <p>Afmetingen: {width}m x {length}m</p>
  <p>Huurprijs: &euro; {price} per dag</p>
</div>
